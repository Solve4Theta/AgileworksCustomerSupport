@{
    ViewBag.Title = "Submit Support Request";
}

<h2 class="mb-4">Submit Support Request</h2>

@using (Html.BeginForm("SubmitSupportRequest", "Support", FormMethod.Post))
{
    <div class="form-group">
        <label for="problemDescription">Describe Your Problem</label>
        <textarea class="form-control" id="problemDescription" name="problemBody" rows="3" placeholder="Describe your problem..." required></textarea>
    </div>
    
    <div class="row">
        <div class="col-md-4"> 
        </div>
        
        <div class="col-md-4 mt-4">
            <div class="form-group">
                <label for="deadlineTime">Choose Deadline</label>
                <input type="datetime-local" class="form-control" id="deadlineTime" name="deadline" required>
            </div>
        </div>
        
        <div class="col-md-4 mt-4 d-flex justify-content-end">
            <div class="btn-container" width="auto">
                <button type="submit" class="btn btn-primary">Submit</button>
            </div>
        </div>
    </div> 
}
